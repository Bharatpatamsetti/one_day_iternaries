doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")
    title 1 Day Traveler
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    link(href="/css/sticky-footer-navbar.css" rel="stylesheet")
  body
    header
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href="#") 1 Day Traveler
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href="#") Home
    main.container(role="main")
      .d-flex.align-items-center.justify-content-center.h-100
        form(action="/result" style="border: 2px solid #ccc; border-radius: 10px; padding: 20px;")
          h1.mb-4 Prepare your 1 Day itinerary
          .form-group
            label(for="date") Date:
            input.form-control(type="date" id="date" name="date" required="true")
          .form-group
            label(for="category") Category:
            select.form-control(name="category" id="category" required="true")
              each category in categories
                option(value=category.category_id)= category.name
          .form-group
            button.btn.btn-primary.btn-block(type="submit") Plan
    footer.footer
      .container
        span.text-muted All rights reserved
