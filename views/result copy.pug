doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="description" content="")
        meta(name="author" content="")
        title 1 Day Traveler
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        link(href="/css/sticky-footer-navbar.css" rel="stylesheet")
        style.
            .main-box {
                width: 90%;
                margin: 0 auto;
            }
            .inner-box {
                background-color: #f8f9fa;
                border: 1px solid #ccc;
                border-radius: 5px;
                padding: 20px;
                margin-bottom: 20px;
                width: 80%;
                margin: 0 auto;
            }
            .message-box {
                background-color: #cce5ff;
                border: 1px solid #b8daff;
                border-radius: 5px;
                padding: 20px;
                margin-bottom: 20px;
                width: 80%;
                margin: 0 auto;
            }
    body
        header
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                a.navbar-brand(href="/") 1 Day Traveler
        main.container(role="main")
            if message
                .message-box.text-center.mb-5
                    h5 #{message}
            
            .main-box.text-center
                if itinerary
                    h1.mb-4 Your 1 Day itinerary for #{itinerary.category} in London 
                    h5.m-4 #{itinerary.description}  
                    each place in activities
                        .inner-box.row.text-left.mt-4
                            .col-sm-8
                                h4.mb-3 #{place.name}
                                p.mb-1 #{place.description}
                            .col-sm-4.text-right
                                p.mb-1 Timing: #{place.time}
                                p.mb-1 Duration: #{place.duration}hr
                else
                    .message-box.text-center
                        h1.mb-4 No itinerary found for the date
                        p.mb-4 
                            | Check out our 
                            a(href="/") Home Page
                            |  for more options.
        footer.footer
            .container
                span.text-muted All rights reserved
